 @import url('https://fonts.googleapis.com/css2?family=Josefin+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap');

 body {
     margin: 0;
     font-family: 'Josefin Sans', sans-serif;
     -webkit-font-smoothing: antialiased;
     background-color: black;
     color: yellow;
     overflow-x: hidden;
 }

  a {
      text-decoration: none;
      color: yellow
  }


  .notice {
    width: 400px;
    height: 100px;
    position: fixed;
    background-color: black;
    border: solid 1px yellow;
    color: yellow;
    margin: auto;
    position: fixed;
    left: 50%;
    top: 2%;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 10;
    transform: translateX(-50%);
    display: none
  }

 .header, .footer {
    width: 100vw;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: black;
    border-bottom: dashed 1px yellow
}

.footer {
    border-bottom: none;
    font-size: 12px
}

.header_container, .footer_container {
    width: 95%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem
}

.logo_nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.logo {
    text-transform: uppercase;
    letter-spacing: -2px;
    font-size: 3rem;
    font-weight: 800;
    font-style: italic;
}

.header ul  {
    display: flex;
    align-items: center;
    justify-content: space-between;
    list-style-type: none;
}

.header ul li {
    margin: 0 10px;
    cursor: pointer;
}

.header ul li:after {
    display:block;
    content: '';
    border-bottom: solid 1px yellow;  
    transform: scaleX(0);  
    transition: transform 250ms ease-in-out;
    }

.header ul li:hover:after {
    transform: scaleX(1);
}

.search {
    display: flex;
    align-items: center;
    justify-content: space-between
}

input[type="text"], input[type="email"], input[type="password"] {
    background-color: black;
    box-shadow: none;
    border: solid 1px yellow;
    padding: 8px 16px;
    width: 130px;
    margin: 0 10px;
    font-family: 'Josefin Sans';
    outline: none;
}

.header button {
    box-shadow: none;
    color: yellow;
    font-family: 'Josefin Sans';
    border: solid 1px yellow;
    padding: 7px;
    font-size: 1rem;
    background: linear-gradient(to right, black 50%, yellow 50%);
    background-size: 200% 100%;
    background-position:left bottom;
    margin-left:10px;
    transition:all 0.5s ease;
    cursor: pointer;
}

.header button:hover {
    background-position:right bottom;
    color: black
}

.header a {
    color: yellow
}

main {
    width: 100vw;
    display: flex;
    justify-content: center;
    align-items: center;
}

.container {
    margin: auto;
    width: 90%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    position: relative;
}

.jumbotron {
    border: solid 1px yellow;
    width: 50%;
    margin: 2rem auto;
    padding: 200px;
    background-image: url(<%= asset_path 'golda.jpg' %>);
    background-size: cover;
    display: flex;
    align-items: center;
    justify-content: center;
}

.jumbotron-text {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    text-align: center;
}

.jumbotron-text div {
    width: 100%;
    margin: auto;
}

.jumbotron-text button {
    font-size: 1rem;
    color: yellow;
    border: solid 2px yellow;
    padding: 0.5rem 1rem;
    font-size: 1.2rem;
    font-weight: 100;
    background: linear-gradient(to right, black 50%, yellow 50%);
    background-size: 200% 100%;
    background-position:left bottom;
    margin-left:10px;
    transition:all 1s ease;
}

.jumbotron-text button a {
    color: yellow
}

.jumbotron-text button:hover {
    background-position:right bottom;
    cursor: pointer;
}

.jumbotron-text button:hover a {
    color: black
}

.articles_list {
    text-align: center;
    width: 50%;
    margin: auto;
}

.articles_list h1 {
    margin-top: 50px;
}

.card {
    border: solid 1px yellow;
    margin: 4rem auto;
    width: 90%;
    box-shadow: 9px 12px 1px gold
}

.user_section {
    border-bottom: solid 1px yellow;

}

.user_section h3 {
    font-weight: 400;
    font-style: italic
}

.article_section h2 {
    color: yellow
}

.article_section h3 {
    font-size: 1rem;
    font-weight: 300;
    font-family: Helvetica
}

.control_section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 40%;
    margin: 2rem auto;
}

.control_section div, #create div, .create_card input[type="submit"]{
    border: solid 1px yellow;
    padding: 0.8rem 1rem;
    background: linear-gradient(to right, black 50%, yellow 50%);
    background-size: 200% 100%;
    background-position:left bottom;
    margin-left:10px;
    transition:all 0.5s ease;
    cursor: pointer;
    color: yellow;
    font-family: Josefin Sans
}


.control_section div a, #create div a, .back {
    color: yellow
}

.control_section div:hover, #create div:hover, .create_card input[type="submit"]:hover, .back div:hover {
    background-position:right bottom;
    cursor: pointer;
}

.control_section div:hover a, #create div:hover a, .create_card input[type="submit"]:hover, .back div:hover a {
    color: black
}

.hour_section {
    border-top: solid 1px yellow;
    opacity: 0.4
}

.hour_section h4 {
     font-weight: 400;
     font-style: italic
}

#create div {
    width: 20%;
    margin: auto;


}

.container ul li {
    list-style-type: none;
}

#create_container, #edit_container {
    display: block;
    margin: auto;
    width: 80%;
    text-align: center;
}

.create_card {
    border: solid 1px yellow;
    padding: 2rem;
    margin: 2rem 0
}

.create_card .labeldiv {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    margin: 5rem;
    position: relative;
}

label {
    width: 80px;
}

.create_card input[type="text"], textarea, input[type="email"], input[type="password"] {
    width: 50vw;
    border: solid 1px yellow;
    background-color: black;
    margin: 0px 60px;
    padding: 20px;
    color: yellow;
    outline: none;
}

input:-internal-autofill-selected {
    background-color: black;
    background-image: none !important;
    color: inherit;
}


.create_card #submitdiv {
    display: flex;
    justify-content: center;
    margin: 1rem;
}

.create_card #submitdiv input[type="submit"] {
    font-size: 1.2rem
}

.field_with_errors {
    width: 90%;
}

.back {
    display: flex;
    justify-content: flex-end;
    align-items: center;
}

.back div {
    width: 120px;
    padding: 1rem;
    border: solid 1px yellow;
    text-align: center;
    color: yellow;
    background: linear-gradient(to right, black 50%, yellow 50%);
    background-size: 200% 100%;
    background-position:left bottom;
    transition:all 0.5s ease;
}

.back a {
    color: yellow;
}


@media (max-width:600px) {

    .header_container, .footer_container {
        flex-wrap: wrap
    }

    .logo_nav {
         width: 100%;
    }

    .search {
        display: none;
    }

    .logo {
        font-size: 1rem
    }


    .container {
        width: 100%;
        padding: 0;
        margin: 10px auto
    }


    .jumbotron {
        padding: 220px 100px;
    }

    .articles_list {
        width: 100%;
    }

    #create {
        position: relative;
        width: 30%;
        margin: 0;
    }

    .control_section {
     width: 70%;
    }

    #create_container, #edit_container {
    width: 92%;
}

.create_card .labeldiv {
    margin: 35px 0;
    display: block
}

    .create_card input[type="text"], textarea, input[type="email"], input[type="password"] {
        margin: 10px 0;
        padding: 20px
    }

    .back {
        justify-content: center
    }

    .hour_section h4 {
        font-size: 13px;
    }

    .field_with_errors {
        width: 100%;
    }


}