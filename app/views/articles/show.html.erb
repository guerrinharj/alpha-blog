<%= render 'layouts/messages' %>

<div class="container"> 

    <div class="articles_list">


            <div class="article_title">
            <h1> Showing articles details! </h1>
            </div>

            <div class="card_list">

                <div class="card">

                    <div class="user_section">
                    <h3> by Gabriel Guerra </h4>
                    </div>

                    <div class="article_section">

                        <h2> Title: <%= @article.title %> </h2>
                        <h3> Description: <%= @article.description %></h3>

                    </div>

                    <div class="control_section">

                        <div> <%= link_to 'Edit', edit_article_path(@article) %> </div>

                        <div> <%= link_to 'Delete', article_path(@article), method: :delete, data: { confirm: "are you sure?" } %> </div>

                    </div>

                    <div class="hour_section">
                        <h4>  Created about <%= time_ago_in_words(@article.created_at) %>ago, edited about <%= time_ago_in_words(@article.updated_at) %> ago</h4>
                    </div>



            </div>

       




    </div>

        <div class="back">
            <div> 
            <%= link_to 'Back', articles_path %> 
            </div>
        </div> 

    </div>

</div>